/**************************************

Harjoitus 12 (Palautus vko 43)

Tee ohjelma, joka kysyy käyttäjältä kokonaisluvun väliltä 1-9 ja
tulostaa vastauksen perusteella seuraavan kuvion (jos vastaus on 6):

1
22
333
4444
55555
666666

Jokainen numero tulee tulostaa toistorakenten avulla erikseen lauseella:
cout << rivinro;

PVM 26.10.2016


for (int i = 0; i <= 2 ; i++)
{
	for (int j= i+1 ; j <= 3 ; j++)
	{
	cout << i << j << endl;
	}
}
return 0;

**************************/

#include <iostream>
using namespace std;

int main()
{
	int luku = 0;
	int rivinro = 1;
	int nro = 0;

	cout << "Anna luku valilta 1-9 " << endl;
	cin >> luku;
	while (rivinro <= luku)
	{
		for (nro = 0; nro < rivinro; nro++)
		{
			cout << rivinro;
		}
		cout << "\n";
		rivinro++;
	}
}
